@model BlogSystem.Web.Areas.Administration.ViewModels.Home.IndexAdminPageViewModel
@{
    ViewBag.Title = "Administration";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="blog-gray-info pull-left">@ViewBag.Title</h2>
        </div>
    </div>
</div>

<hr/>

<div class="row">
    
    <div class="col-lg-4 col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="glyphicon glyphicon-tag admin-panel-icon-size"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">
                            <span>@Model.BlogPostsCount</span>
                        </div>
                        <div>
                            <span>Blog Posts</span>
                        </div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("Index", "BlogPosts", new { area = "Administration" })" class="clearfix">
                <div class="panel-footer">
                    <span>Manage</span>
                    <span class="pull-right">
                        <i class="glyphicon glyphicon-circle-arrow-right"></i>
                    </span>
                </div>
            </a>
        </div>
    </div>

    <div class="col-lg-4 col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="glyphicon glyphicon-comment admin-panel-icon-size"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">
                            <span>@Model.CommentsCount</span>
                        </div>
                        <div>
                            <span>Post Comments</span>
                        </div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("Index", "PostComments", new { area = "Administration" })" class="clearfix">
                <div class="panel-footer">
                    <span>Manage</span>
                    <span class="pull-right">
                        <i class="glyphicon glyphicon-circle-arrow-right"></i>
                    </span>
                </div>
            </a>
        </div>
    </div>

    <div class="col-lg-4 col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="glyphicon glyphicon-user admin-panel-icon-size"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">
                            <span>@Model.ApplicationUsersCount</span>
                        </div>
                        <div>
                            <span>Application Users</span>
                        </div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("Index", "ApplicationUsers", new { area = "Administration" })" class="clearfix">
                <div class="panel-footer">
                    <span>Manage</span>
                    <span class="pull-right">
                        <i class="glyphicon glyphicon-circle-arrow-right"></i>
                    </span>
                </div>
            </a>
        </div>
    </div>

</div>