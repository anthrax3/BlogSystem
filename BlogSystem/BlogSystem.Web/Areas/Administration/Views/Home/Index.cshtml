@model BlogSystem.Web.Areas.Administration.Models.HomeViewModels.IndexAdminPageViewModel
@{
    ViewBag.Title = "Administration";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="blog-gray-info pull-left">@ViewBag.Title</h2>
        </div>
    </div>
</div>

<hr/>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>
                <strong>@Html.ActionLink("Blog Posts", "Index", "BlogPosts", new { area = "Administration" }, null)</strong>
            </h3>

            <table class="blog-table-word-wrap table table-bordered table-striped table-hover ">
                <tr>
                    <td class="col-md-2">
                        <strong>Blog Posts</strong>
                    </td>
                    <td class="col-md-2">
                        <strong>Comments</strong>
                    </td>
                    <td class="col-md-2">
                        <strong>Actions</strong>
                    </td>
                </tr>
                <tr>
                    <td>@Model.BlogPostsCount</td>
                    <td>0</td>
                    <td>
                        <a href="@Url.Action("Create", "BlogPosts", new { area = "Administration" })" class="btn btn-success btn-sm center-block">
                            <i class="glyphicon glyphicon-plus"></i>
                            <span>Add New Post</span>
                        </a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>



