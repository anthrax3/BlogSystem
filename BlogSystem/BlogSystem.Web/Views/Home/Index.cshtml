@model BlogSystem.Web.Models.HomeViewModels.IndexPageViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-12">
        <h2 class="blog-gray-info pull-left blog-page-header">@ViewBag.Title</h2>
    </div>
</div>

<hr/>

@if (Model.Posts.Any())
{
    foreach (var post in Model.Posts)
    {
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <h3>
                            @Html.ActionLink(post.Title, "Post", "Blog", new { id = post.Id }, new { @class = "blog-post-title" })
                        </h3>
                    </div>
                    <div class="blog-post-tags">
                        <ul class="list-unstyled list-inline blog-post-tags">
                            <li>
                                <i class="glyphicon glyphicon-calendar"></i>
                                @post.CreatedOn.ToString("MMMM dd, yyyy, HH:mm:ss tt")
                            </li>
                            <li>
                                <i class="glyphicon glyphicon-pencil"></i>
                                @post.Author
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <hr/>
    }
}
else
{
    <div class="row">
        <div class="col-md-11">
            <h2>No posts available.</h2>
        </div>
    </div>
}
